% labels
\newcommand{\nOK}[1]{
  node[okNode](#1)  {\phantom{AB}};
  \node[text=green] at (#1.center) {\okN}
}

\newcommand{\nOr}[1]{
  node[orNode](#1)  {\phantom{AB}};
  \node[text=red] at (#1.center) {\orN}
}

\newcommand{\nAnd}[1]{
  node[andNode](#1)  {\phantom{AB}};
  \node[text=blue] at (#1.center) {\andN}
}

\newcommand{\nCut}[1]{
  node[atomNode](#1)  {\phantom{AB}};
  \node at (#1.center) {\cutN}
}

\newcommand{\nCall}[2]{
  node[atomNode](#1)  {\phantom{AB}};
  \node at (#1.center) {#2}
}

\newcommand{\nAny}[1]{
  node(#1)  {\phantom{AB}};
  \node at (#1.center) {\dots}
}

\newcommand{\nDead}[1]{
  node(#1)  {\phantom{AB}};
  \node at (#1.center) {DEAD}
}

\newcommand{\orN}{\ensuremath{Or}}   % or node
\newcommand{\andN}{\ensuremath{And}} % and node
\newcommand{\okN}{\ensuremath{OK}} % ok node
\newcommand{\cutN}{\ensuremath{!}} % ok node


